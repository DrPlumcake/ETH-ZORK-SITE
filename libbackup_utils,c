#include <stdio.h>
#include <stdlib.h>

int run_backup(const char* source, const char* destination) {
    char command[512];

    // Comando tar per creare il backup
    snprintf(command, sizeof(command), "tar -czf %s %s", destination, source);

    printf("[*] Eseguo: %s\n", command);

    int result = system(command);
    return result;
}
